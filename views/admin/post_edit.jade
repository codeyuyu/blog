doctype 5
html
  head
    title Noderce 管理中心
    link(rel='stylesheet', href='/admin/style.css')
    script(src='/libs/jquery.min.js')
    script(src='/libs/cal.js')
  body
    #wrapper
      #nav
        ul
          li
            a(href="/admin") Home
            span  ›
          li
            a(href="/admin/post") Post
            span  ›
          li
            a(href="/admin/post/write") Write
          .quick
            a(href="/admin/post/write",title="Write Post") <span>Write</span>
      form#write_post(method="post")
        #post_info
          .item.title
            label(for="post_title")
              span Title
            input(type="text", name ="title", id="post_title", value=title)
          .item.slug
            label(for="post_slug")
              span Slug
            input(type="text", name ="slug", id="post_slug", value=slug)
          .item.created
            label(for="post_created")
              span Created
            input(type="text", name ="created", id="post_created", value=created, readonly='')
          div.clearfix
        #content
          textarea(name="content", id="post_content") !{content}
        #meta
          input(type="hidden", name="old_slug", id="post_old_slug", value=slug)
          button.btn.btn-small
            a#post-it Edit Done
    script
      $('input#post_created').simpleDatepicker({ startdate: 2008, enddate: 2012 });
